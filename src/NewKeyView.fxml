<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewKeyController">
   <children>
      <AnchorPane layoutY="-7.0" prefHeight="499.0" prefWidth="783.0">
         <children>
            <TextField fx:id="txtName" layoutX="57.0" layoutY="335.0" prefHeight="25.0" prefWidth="149.0" promptText="Firstname Lastname" />
            <TextArea fx:id="txtNote" layoutX="57.0" layoutY="373.0" prefHeight="83.0" prefWidth="149.0" promptText="Note" />
            <DatePicker fx:id="dateExpire" layoutX="58.0" layoutY="172.0" prefHeight="25.0" prefWidth="150.0" promptText="YYYY-MM-DD" />
            <TextField fx:id="txtCardID" alignment="CENTER" layoutX="59.0" layoutY="115.0" promptText="Card ID" />
            <Label fx:id="lblAccess" layoutX="59.0" layoutY="152.0" text="Access Expires:" />
            <Button fx:id="btnEditAccess" layoutX="263.0" layoutY="429.0" mnemonicParsing="false" onAction="#editAccess" prefHeight="27.0" prefWidth="200.0" text="Edit Access levels" wrapText="true" />
            <ImageView fx:id="logoImage" fitHeight="61.0" fitWidth="157.0" layoutX="39.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Logo.png" />
               </image>
               <effect>
                  <DropShadow />
               </effect>
            </ImageView>
            <Label layoutX="56.0" layoutY="274.0" text="HOLDER INFO:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label layoutX="59.0" layoutY="82.0" text="KEY INFO:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <ComboBox fx:id="comboInstitution" layoutX="59.0" layoutY="216.0" prefWidth="150.0" promptText="Institution" />
            <TextField fx:id="txtPnr" layoutX="57.0" layoutY="299.0" prefHeight="25.0" prefWidth="149.0" promptText="YYMMDD-XXXX" />
            <ListView fx:id="listAlevels" layoutX="263.0" layoutY="319.0" prefHeight="101.0" prefWidth="200.0" />
            <Label layoutX="277.0" layoutY="276.0" text="Access levels:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TableView fx:id="tableRooms" layoutX="528.0" layoutY="105.0" prefHeight="167.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="columnRoomID" prefWidth="75.0" text="Room ID" />
                <TableColumn fx:id="columnRoomType" prefWidth="124.0" text="Room type" />
              </columns>
            </TableView>
            <ListView fx:id="listSpecAccess" layoutX="263.0" layoutY="105.0" prefHeight="167.0" prefWidth="200.0" />
            <Label layoutX="263.0" layoutY="82.0" text="Special Access">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="btnLeft" layoutX="483.0" layoutY="160.0" mnemonicParsing="false" onAction="#moveLeft" text="&lt;" />
            <Button fx:id="btnRight" layoutX="483.0" layoutY="197.0" mnemonicParsing="false" onAction="#moveRight" text="&gt;" />
            <Label layoutX="528.0" layoutY="82.0" text="Accessible rooms">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="btnSaveKey" layoutX="528.0" layoutY="429.0" mnemonicParsing="false" onAction="#saveKey" prefHeight="27.0" prefWidth="200.0" text="Save Keycard" wrapText="true" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
